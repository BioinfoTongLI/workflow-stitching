docker {
  enabled = false
}

singularity {
  enabled = true
  autoMounts = true

  /*cacheDir = '/nfs/cellgeni/imaging/singularity/cache'*/
}

executor {
    name = 'lsf'
    queueSize = 15
    // https://www.nextflow.io/docs/latest/executor.html#lsf
    perJobMemLimit = true
}

process {
  queue = 'imaging'
  cpus = 2
  memory = 5.GB
  maxForks = 25
  maxRetries = 2
  maxErrors = '-1'
  /*errorStrategy = 'ignore'*/

  // Capture exit codes from upstream processes when piping
  shell = ['/bin/bash', '-euo', 'pipefail']


}
